<% include ./partials/header %>

    <div class="ui main text container">
        <div class="ui huge header">RESTful Blog App</div>
        <div class="ui top attached segment">
            <div class="ui divided items">
                <% blogs.forEach(function(blog){ %>
                    <div class="item">
                        <div class="image"> <img class="ui centered rounded image" src="<%= blog.image %>"></a></div>
                        <div class="content">
                                <a class="header" href="/blogs/<%=blog._id %>" >
                                        <%= blog.title %>
                                        <div class="meta"><%= blog.created.toDateString() %></div>
                                        <div class="description"><%- blog.body.substring(0, 100) %></div>
                                        <div class="extra">
                                                <a class="ui floated basic violet button" href="/blogs/<%=blog._id %>" ></a>
                                        </div>
                                </a>
                        </div>

                       
                        <span>
                            <%= blog.created.toDateString() %>
                        </span>
                        <p>
                            <%= blog.body.substring(0, 100) %>...
                        </p>
                        <a href="/blogs/<%=blog._id %>">Read More</a>
                    </div>
                    <% }); %>

            </div>
        </div>
    </div>
    <div class="ui main text container segment">
        <h1>Index page!</h1>
    </div>

    <div class="ui main text container segment">

    </div>

    <% include ./partials/footer %>